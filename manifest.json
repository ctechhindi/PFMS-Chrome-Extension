{
	"name": "PFMS",
	"version": "0.0.1",
	"description": "Easily Work in PFMS",
	"icons": {
		"16": "img/icon16.png",
		"32": "img/icon32.png",
		"48": "img/icon48.png",
		"128": "img/icon128.png"
	},
	"permissions": [
		"notifications",
		"storage",
		"http://*/",
		"https://*/",
		"tabs",
		"activeTab",
		"contextMenus"
	],
	"browser_action": {
		"default_icon": "img/icon32.png"
	},
	"background": {
		"scripts": [
			"js/background.js"
		],
		"persistent": false
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},
	"content_scripts": [
		{
			"matches": [
				"https://pfms.nic.in/BenificaryManagement/AddNewBeneficiary.aspx"
			],
			"js": [
				"js/jquery-1.8.3.min.js",
				"js/main_script/add_beneficiary.js"
			],
			"all_frames": true
		}
	],
	"commands": {
		"start-stop-app": {
			"suggested_key": {
				"default": "Ctrl+Shift+6",
				"mac": "Command+Shift+6"
			},
			"description": "Start/Pause Application",
			"global": true
		}
	},
	"manifest_version": 2,
	"content_security_policy": "script-src 'self' 'unsafe-eval' https://ssl.google-analytics.com; object-src 'self'",
	"web_accessible_resources": [
		"js/jquery-1.8.3.min.js",
		"options.html"
	]
}